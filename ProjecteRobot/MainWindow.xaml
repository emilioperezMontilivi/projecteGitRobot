<Window x:Class="ProjecteRobot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjecteRobot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grdRobot">
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="canvas" Grid.Row="0" MinHeight="300" MinWidth="350" VerticalAlignment="Center" HorizontalAlignment="Center" Background="DeepSkyBlue"></Canvas>
        <Button x:Name="btnIniciaJoc" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6" Margin="10" Content="Inicia el joc" FontSize="20" Click="btnIniciaJoc_Click"/>
        <TextBlock x:Name="tbNumeroMoviments" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="6" Margin="10" FontSize="20" TextAlignment="Center">Aqui sortiran els moviments realitzats quan acabis la partida</TextBlock>
    </Grid>
</Window>
